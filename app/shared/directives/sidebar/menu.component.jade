.ui(*ngIf="currentUser.isLogin")
	.ui.secondary.vertical.menu.inverted(style="width:100%;")
		a.item((click)="goToInformation()", [ngClass]="{active: router.isRouteActive(router.generate(['/Information']))}")
			i.info.circle.icon 
			| Information
		a.item((click)="goToRegistration()", [ngClass]="{active: router.isRouteActive(router.generate(['/Registration']))}")
			i.browser.icon
			| Browse Courses
		a.item 
			i.code.icon
			| Export JSON
	.ui.basic.segment(style="position: absolute; bottom: 0px; width: 100%;")
		h2.ui.header.inverted
			img.ui.circular.image(src="assets/imgs/avatar/elliot.jpg") 
			.content
				| {{currentUser.name}}
				.sub.header.inverted
					| {{currentUser.id}}
		.ui.buttons.fluid.large
			button.ui.button 
				i.edit.icon
				| Edit
			button.ui.button.red((click)="logout()")
				i.lock.icon
				| Logout